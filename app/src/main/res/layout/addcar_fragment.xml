<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Введите данные автомобиля"
        android:textSize="20dp"
        android:id="@+id/addText"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Label"
        android:layout_below="@+id/addText"
        android:inputType="text"
        android:id="@+id/addInLabel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Model"
        android:layout_below="@+id/addInLabel"
        android:inputType="text"
        android:id="@+id/addInModel"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Cost"
        android:layout_below="@+id/addInModel"
        android:inputType="numberDecimal"
        android:id="@+id/addInCost"/>

    <EditText
        android:id="@+id/addInRent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/addInCost"
        android:hint="RentCost"
        android:inputType="numberDecimal"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/addButtonOK"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="216dp"
        android:hint="kek"
        android:onClick="addCarListener"
        android:layout_alignParentLeft="true" />
</RelativeLayout>