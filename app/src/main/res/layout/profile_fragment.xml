<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--<ProgressBar-->
    <!--android:id="@+id/login_progress"-->
    <!--style="?android:attr/progressBarStyleLarge"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:layout_marginBottom="8dp"-->
    <!--android:visibility="gone" />-->

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/place"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/CarInfoName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text"
                    android:text="Имя пользователя:"
                    android:textSize="12pt" />

                <TextView
                    android:id="@+id/ProfileName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/CarInfoName"
                    android:text="Name"
                    android:textSize="12pt"
                    android:textColor="@color/text"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/place"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/CarInfoModel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Фамилия пользователя:"
                    android:textSize="12pt"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/ProfileSurname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Surname"
                    android:textSize="12pt"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/CarInfoModel"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/place"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/CarInfoCost"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Денег заработано:"
                    android:textSize="12pt"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/ProfileMoney"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Money"
                    android:textSize="12pt"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/CarInfoCost"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/place"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/CarInfoRent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Количество автомобилей:"
                    android:textSize="12pt"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/ProfileCount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Counter"
                    android:textSize="12pt"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/CarInfoRent"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/place"
                android:layout_marginTop="10dp"
                android:paddingLeft="10dp">
                <TextView
                    android:id="@+id/CarInfoemail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:text="Email:"
                    android:textSize="12pt"
                    android:textColor="@color/text"/>

                <TextView
                    android:id="@+id/ProfileEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="email"
                    android:textSize="12pt"
                    android:textColor="@color/text"
                    android:layout_toRightOf="@+id/CarInfoemail"
                    android:textStyle="bold"/>
            </RelativeLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Edit Profile"
                android:textStyle="bold"
                android:id="@+id/editprofilebutton"
                android:gravity="center"
                style="?android:textAppearanceSmall"
                android:textSize="13pt"/>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>